{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@fileconcat/core": [
        "packages/core/src/index.ts"
      ],
      "@fileconcat/core/*": [
        "packages/core/src/*"
      ]
    }
  }
}
