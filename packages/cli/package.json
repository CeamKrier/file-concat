{
    "name": "fileconcat",
    "version": "1.0.0",
    "description": "Privacy-first CLI tool for concatenating files for LLM context",
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "fileconcat": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "tsx src/index.ts",
        "dev": "tsx src/index.ts",
        "build": "tsup",
        "prepublishOnly": "pnpm run build",
        "check": "tsc --noEmit"
    },
    "keywords": [
        "cli",
        "llm",
        "concatenate",
        "files",
        "context",
        "ai",
        "chatgpt",
        "claude",
        "gemini",
        "file-concat",
        "repomix"
    ],
    "author": "Emre Çakır <hello@ceamkrier.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/fileconcat/file-concatenator.git",
        "directory": "packages/cli"
    },
    "homepage": "https://fileconcat.com",
    "dependencies": {
        "@fileconcat/core": "workspace:*",
        "commander": "^12.0.0",
        "glob": "^11.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
